<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blockChainLoading"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/warningBackground">

    <ProgressBar
        android:id="@+id/chainLoadingProgress"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorProgress"
        android:indeterminateTintMode="src_atop"
        style="@android:style/Widget.ProgressBar.Inverse"/>

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/chainLoadingProgress"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chain_still_loading"/>

</RelativeLayout>
