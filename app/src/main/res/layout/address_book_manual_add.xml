<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/SmallHeadingText"
        android:text="@string/add_manual_address_book"/>

    <EditText
        android:id="@+id/manualAddressBookAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="@string/enter_address_hint"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            style="@style/SmallHeadingText"
            android:labelFor="@id/manualAddressBookAddress"
            android:text="@string/address"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/manualAddressBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="@string/enter_address_name_hint"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            style="@style/SmallHeadingText"
            android:labelFor="@id/manualAddressBookName"
            android:text="@string/name"/>

        <tech.nextcash.nextcashwallet.TextButton
            android:id="@+id/addManualAddressBook"
            android:layout_alignParentEnd="true"
            style="@style/SmallButton"
            android:text="@string/add"/>

    </RelativeLayout>

</LinearLayout>
